<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.tom_roush.musclesloth"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.READ_CALENDAR"/>
    <uses-permission android:name="android.permission.WRITE_CALENDAR"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".SearchActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".WorkoutWorkflowActivity" />
        <activity android:name=".SuggestedTimesActivity"/>
        <activity android:name=".SchedulingFinishedActivity"/>
        <activity
            android:name=".SchedulingPrefsActivity"
            android:label="@string/title_activity_scheduling_prefs"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>
